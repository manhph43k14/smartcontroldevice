<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/imgOptionSize"
        android:layout_height="@dimen/imgOptionSize"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/tvOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tvOptionMarginLeft"
        android:layout_marginTop="@dimen/tvOptionMarginTop"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textSize="@dimen/tvOptionTextSize"
        android:textStyle="bold" />
</LinearLayout>